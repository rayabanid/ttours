{% if tours %}
    <div class="card-container">
        {% for tour in tours %}
            <div class="card">
                <div class="card__header">
                    <div class="card__picture">
                        <div class="card__picture-overlay">&nbsp;</div>
                        <img src="{{ asset('uploads/tours/'~tour.imageCover) }}" alt="{{ tour.name }}" class="card__picture-img" />
                    </div>
                    <h3 class="heading-tertirary"><span>{{ tour.name }}</span></h3>
                </div>

                <div class="card__details">
                    <h4 class="card__sub-heading">{{ tour.difficulty }} {{ tour.duration }}-day tour</h4>
                    <p class="card__text">{{ tour.summary }}</p>
                    <div class="card__data">
                        <svg class="card__icon">
                            <use xlink:href="{{ asset('img/icons.svg#icon-map-pin') }}"></use>
                        </svg>
                        <span>{{ tour.location }}</span>
                    </div>
                    <div class="card__data">
                        <svg class="card__icon">
                            <use xlink:href="{{ asset('img/icons.svg#icon-calendar') }}"></use>
                        </svg>
                        <span>{{ tour.startDate|date("F Y") }}</span>
                    </div>
                    <div class="card__data">
                        <svg class="card__icon">
                            <use xlink:href="{{ asset('img/icons.svg#icon-user') }}"></use>
                        </svg>
                        <span>{{ tour.maxGroupSize }} people</span>
                    </div>
                </div>

                <div class="card__footer">
                    <p>
                        <span class="card__footer-value">${{ tour.price }}</span>
                        <span class="card__footer-text">per person</span>
                    </p>
                    <p class="card__ratings">
                        <span class="card__footer-value">{{ tour.ratings }}</span>
                        <span class="card__footer-text">rating</span>
                    </p>
                    <a href="{{ path('tour_show', {'id': tour.id}) }}" class="btn btn--green btn--small">Details</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="error">
        <div class="error__title">
            <h2 class="heading-secondary heading-secondary--error">Sorry!</h2>
        </div>
        <div class="error__msg">No Tours available</div>
    </div>
{% endif %}